<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="common_EasySwipeMenuLayout">
        <attr name="common_leftMenuView" format="reference" />
        <attr name="common_rightMenuView" format="reference" />
        <attr name="common_contentView" format="reference" />
        <attr name="common_canRightSwipe" format="boolean" />
        <attr name="common_canLeftSwipe" format="boolean" />
        <attr name="common_fraction" format="float" />
    </declare-styleable>

    <declare-styleable name="common_AutoScrollViewPager">
        <attr name="common_points_visibility" format="boolean" />
        <attr name="common_points_position" format="enum">
            <enum name="CENTER" value="0" />
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
        </attr>
        <attr name="common_points_container_background" format="reference|color" />
        <attr name="common_isAutoScroll" format="boolean" />
    </declare-styleable>
</resources>